COMPOSE_PROJECT_NAME=analytics-prod

# Production Environment Configuration
# IMPORTANT: Copy this to .env.prod and update with production values
# DO NOT commit .env.prod to version control

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Database Configuration (PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/analyticsdb
POSTGRES_DB=analyticsdb
POSTGRES_USER=analytics
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_PORT=5432

# JWT Configuration
# CRITICAL: Generate a strong secret for production!
# Example: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_AT_LEAST_256_BITS_LONG
JWT_EXPIRATION=86400000

# Container Configuration
BACKEND_PORT=8080

# Build Configuration
BUILD_VERSION=1.0.0
